<div class="bg-primary pt-5 h-100vh">
    <div class="bg-yellow text-center">
        <h2 class="pt-2 pb-2"><%= @user.name %></h2>
    </div>
    <div class="bg-yellow text-center">
        <h2 class="pt-2 pb-2"><%= @user.email %></h2>
    </div>
    <div class="text-center container bg-white mt-5 pb-5">
        <div class="d-flex justify-center">
            <% if current_user.id == @user.id %>
                <% @plans.each do |plan| %>
                    <li><%= link_to plan.name, plan_path(plan.id) %>:<%= l plan.start_time %></li>
                <% end %>
                <% if @today_plans %>
                    <p class="mt-30">今日の予定</p>
                    <% @today_plans.each do |plan| %>
                        <p><%= link_to plan.name, plan_path(plan.id) %>:<%= l plan.start_time %></p>
                    <% end %>
                <% end %>
                <%= link_to '編集', edit_user_path(@user.id), class: 'btn__half btn__update mt-30' %>
                <%= button_to 'ログアウト', user_path(@user.id), class: 'btn__half btn__delete mt-30', method: :delete %>
            <% end %>
        </div> 
    </div>
</div>