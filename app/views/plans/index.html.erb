<div class="bg-primary">
    <h1 class="text-center"><%= @teacher.name %></h1>
    <%= month_calendar events: @plans do |date, plans| %>
        <%= date.day %>
        <% if plans.size > 0 %>
        <% plans.each do |plan| %>
            <div class="text-center">
                <p><%= plan.name %></p>
                <p><%= titleToString plan.title %></p>
            </div>
        <%= link_to ' 詳細', plan_path(plan.id), class: 'btn btn__update mb-1'%>
        <% end %>
        <% else %>
        <%= link_to '予約', new_plan_path(date: date, teacher_id: @teacher.id), class: 'btn btn__reserve' %>
        <% end %>
    <% end %>
    <% if !@current_teacher.nil? %>
        <%= link_to '先生一覧', teachers_path, class: 'btn btn__reserve mt-30' %>
    <% end %>
    <% if !@current_user.nil? %>
        <%= link_to 'ユーザー一覧', users_path, class: 'btn btn__reserve mt-30' %>
    <% end %>
</div>