<div>
    <h1>パスワード再設定</h1>
    <%= form_with(model: @teacher, url: teacher_password_reset_path(params[:id]), local: true) do |f| %>
        <%= render 'common/error' %>
        <div class="form-group d-flex pt-4">
            <%= f.label :password, 'パスワード'%>
            <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group d-flex pt-4">
            <%= f.label :password_confirmation, '確認'%>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= hidden_field_tag :email, @teacher.email %>
        <%= f.submit '更新', class: 'btn btn__reserve' %>
    <% end %>
</div>