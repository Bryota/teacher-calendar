<div>
    <h1>パスワード再設定</h1>
    <%= form_with(url: teacher_password_resets_path, scope: :password_reset, local: true) do |f| %>
        <%= render 'common/error' %>
        <div class="form-group d-flex pt-4">
            <%= f.label :email, 'Eメール'%>
            <%= f.email_field :email, class: 'form-control' %>
        </div>
        <%= f.submit '送信', class: 'btn btn__reserve' %>
    <% end %>
</div>
